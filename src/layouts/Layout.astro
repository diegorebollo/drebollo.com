---
import "@fontsource-variable/raleway";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Diego Rebollo " />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
		position: relative;
		min-width: 0;
		overflow: hidden;
	}

	body {
		min-height: 100dvh;
		background-color: black;

		font-family: "Raleway Variable", sans-serif;
		color: white;
	}

	h1,
	h2,
	h3,
	h4 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	a {
		color: inherit;
	}

	::selection {
		color: black;
		background-color: white;
	}
</style>
