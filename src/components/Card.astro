---
import { Github, Link } from "lucide-astro";

interface Props {
	title: string;
	description: string;
	tags: Array<String>;
	github?: string;
	web?: string;
}

const { title, description, tags, github, web } = Astro.props;
---

<div class="card">
	{
		web ? (
			<a href={web} target="_blank">
				<h4>{title}</h4>
				<p>{description}</p>
			</a>
		) : (
			<>
				<h4>{title}</h4>
				<p>{description}</p>
			</>
		)

		
	}

	<div class="footer">
		<div class="tags">{tags.map((tag) => <span>{tag}</span>)}</div>
		<nav>
			<ul>	
				{
					github && (
						<li>
							<a href={github} target="_blank"><Github /></a>
						</li>
					)
				}	
				{
					web && (
						<li>
							<a href={web} target="_blank">
								<Link />
							</a>
						</li>
					)
				}
			</ul>
		</nav>
	</div>

	<style>
		.card {
			border-radius: 8px;
			padding-right: 15px;
			padding-left: 15px;
			padding-bottom: 5px;

			border: 1.3px solid rgba(255, 255, 255, 0.281);
			max-width: 550px;
		}

		.card a {
			text-decoration: none;
		}

		.footer {
			display: flex;
			justify-content: space-between;
		}

		.tags {
			display: flex;
			gap: 0.5rem;
		}

		.tags span {
			color: rgba(255, 255, 255, 0.918);
			height: 30px;
			border-radius: 8px;
			padding: 5px;

			background-color: rgba(255, 255, 255, 0.164);
		}

		ul {
			list-style-type: none;
			margin: 0;
			padding: 0;

			display: flex;
			flex-direction: row;
			gap: 8px;
		}
	</style>
</div>
