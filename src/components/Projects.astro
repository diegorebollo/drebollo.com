---
import Card from "../components/Card.astro";
---

<div class="container">
    <div class="title-container"><h3>Projects</h3></div>
    <Card
    title="Twitch2Podcast"
    description="Converts any Twitch channel into a Podcast Feed using FFmepg for audio transcoding."
    tags={["Go", "HTMX"]}
    github="https://github.com/diegorebollo/Twitch2Podcast"
    web="https://twitch2podcast.drebollo.com"
    />
    <style>
        .container {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding-left: 10px;
        }

        h3 {
            margin-bottom: 8px;
            font-size: 1.8rem;

            color: rgb(0, 0, 0);
            background-color: rgb(255, 255, 255);
            width: 120px;
            text-align: center;
        }

        h3::selection {
            color: white;
            background-color: black;
        }

        .title-container {
            display: flex;
            width: 100%;
        }

        @media screen and (max-width: 1160px) {
            .container {
                padding-left: 0px;
                align-items: center;
            }

            .title-container {
                justify-content: center;
            }
        }

        @media screen and (max-width: 623px) {
            .title-container {
                justify-content: left;
            }
        }
    </style>
</div>
